{
    "name": "amc_process",
    "description": "Preprocessing of AMC data",

    "absolute_path": "/projects/0/aus20644/data/amc_anon/DT4H_20240112/FeatherFormat/",
    "preprocessing": "/home/sbenson/sw/Doppelganger/data/preprocessing2",

    "Datatools4heart_Patient.feather": ["pseudo_id", "Geboortejaar", 
    "Geboortemaand", "Geslacht", "Overlijdensdatum"],
    "Datatools4heart_Opnametraject.feather": ["pseudo_id", "OpnameDatum"],
    "Datatools4heart_Tabakgebruik.feather": ["pseudo_id", "IsHuidigeRoker"],
    "Datatools4heart_MetingBMI.feather": ["pseudo_id", "Patientcontactid", "BMI"],
    "Datatools4heart_MetingBloeddruk.feather": ["pseudo_id", "PatientContactId", "SystolischeBloeddrukWaarde"],
    "Datatools4heart_VoorgeschiedenisMedisch.feather": ["pseudo_id", "DiagnoseOmschrijving"],
    "Datatools4heart_MedicatieToediening.feather": ["pseudo_id", "ATCKlasseCode"],
    "Datatools4heart_Labuitslag.feather": ["pseudo_id", "BepalingCode",
    {"UitslagNumeriek": [{"RKRE;BL": "creatinine"}]}],

    "categories": {"gender": ["M", "F"]},
    "scaler": "scaler_amc.h5",
    "imputer": "imputer_amc.h5",
    "final_cols": ["Geslacht", "AgeAtOpname", "IsHuidigeRoker", 
    "BMI", "diabetes", "SystolischeBloeddrukWaarde", "ace", "time", "beta", "creatinine"],
    
    "PreTransforms": {
        "OpnameDatum": {
            "func": "datetime_keepfirst",
            "kwargs": {
                "col_to_date": "OpnameDatum",
                "sort_col": "OpnameDatum",
                "drop_col": "pseudo_id"
            }
        },
        "Overlijdensdatum": {
            "func": "datetime",
            "kwargs": {
                "col_to_date": "Overlijdensdatum"
            }
        },
        "ATCKlasseCode": {
            "func": "chain",
            "kwargs": {
                "funcs": ["ace", "beta"],
                "kwargs": {
                    "ace": {"meds": "ATCKlasseCode", "out_col": "ace", "id_col": "pseudo_id"},
                    "beta": {"meds": "ATCKlasseCode", "out_col": "beta", "id_col": "pseudo_id"}
                }
            }
        },
        "IsHuidigeRoker": {
            "func": "smokerprocess",
            "kwargs": {
                "smoking": "IsHuidigeRoker",
                "id_col": "pseudo_id"
            }
        },
        "DiagnoseOmschrijving": {
            "func": "diagnoseprocess_simple",
            "kwargs": {
                "disease": "diabetes",
                "search_col": "DiagnoseOmschrijving",
                "id_col": "pseudo_id"
            }
        },
        "SystolischeBloeddrukWaarde": {
            "func": "keepfirst",
            "kwargs": {
                "sort_col": "PatientContactId",
                "drop_col": "pseudo_id"
            }
        },
        "BMI": {
            "func": "keepfirst",
            "kwargs": {
                "sort_col": "Patientcontactid",
                "drop_col": "pseudo_id"
            }
        }
    },

    "MergedTransforms": {
        "time": {
            "func": "diff",
            "kwargs": {
                "end": "Overlijdensdatum",
                "start": "OpnameDatum"
            }
        },
        "AgeAtOpname": {
            "func": "diff",
            "kwargs": {
                "end": "OpnameDatum",
                "start": "Geboortejaar",
                "level": "year"
            }
        },
        "Geslacht": {
            "func": "map",
            "kwargs": {
                "map": {"Man": 0, "Vrouw": 1}
            }
        },
        "FillNaN": {
            "func": "fillna",
            "kwargs": {
                "values": {"IsHuidigeRoker": 0, "diabetes": 0}
            }
        },
        "DropNaN": {
            "func": "dropna",
            "kwargs": {
                "subset": ["BMI", "SystolischeBloeddrukWaarde"]
            }
        }
    }
}
